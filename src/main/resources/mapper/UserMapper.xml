<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huminxi.springboot.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.huminxi.springboot.entity.User">
        <id column="id" property="id" jdbcType="SMALLINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="base_colum_list">
        id
        , name
    </sql>
    <select id="select" parameterType="com.huminxi.springboot.entity.User"
            resultMap="BaseResultMap">
        select
        <include refid="base_colum_list"/>
        from user
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
        </where>
    </select>
</mapper>